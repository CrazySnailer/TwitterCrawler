	<build>
	  <plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>2.3.2</version>
			<configuration>
				<source>1.6</source>
				<target>1.6</target>
			</configuration>
		</plugin>
		
		<plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-assembly-plugin</artifactId>
	    <configuration>
				<finalName>TwitterRelationCrawler</finalName>
				<descriptors>
				<descriptor>src/main/assembly/package.xml</descriptor>
				</descriptors>
			
				<archive>
	            <manifest>
	              <mainClass>isiteam.TwitterCrawler.mainApp.RelationCrawler</mainClass>
	            </manifest>
	            </archive>
	
			</configuration>
	    
	    <executions>
	      <execution>
	        <id>make-assembly</id>
	        <phase>package</phase>
	        <goals>
	          <goal>single</goal>
	        </goals>
	      </execution>
    </executions>
  </plugin>
</plugins>
